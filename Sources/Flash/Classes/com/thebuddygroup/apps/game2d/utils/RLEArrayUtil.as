		public function getStringFromArray2D(myInputArray:Array):String{
			var myLines:Array	= new Array();
			for each(var myRow:Array in myInputArray){
				myLines.push('['+myRow.join(',')+']');
			}
			return '[\n'+myLines.join(',\n')+'\n]';
		}
		
		public function RLEEncode(myInputArray:Array):Array
		{
			var myRow:uint,
				myCol:uint,
				myValue:uint,
				myCurrentBits:uint,
				myOutputCol:uint,
				myLastValue:int,
				myLength:uint,
				myMapRowCount:uint	= myInputArray.length,
				myMapColCount:uint	= (myInputArray[0] as Array).length,
				myOutputArray:Array	= new Array();
			
			for(myRow=0; myRow < myMapRowCount; myRow++){
				
				myCurrentBits	= 0;
				myOutputCol		= 0;
				myLength		= 1;
				myLastValue		= myInputArray[myRow][0];
				myOutputArray[myRow]	= new Array();
				
	            for(myCol=1; myCol < myMapColCount; myCol++){
	            	myValue		= myInputArray[myRow][myCol];
	            	
	            	if(myValue == myLastValue){
	            		myLength++;
	            	}else{
	            		//trace("Outputting " + myLastValue + " x " + myLength);
	            		myOutputArray[myRow][myOutputCol]	= getOutputValue(myLastValue, myLength);
	            		myOutputCol++;
	            		myLength = 1;
	            	}
	            	
	            	if(myCol == myMapColCount - 1){
	            		//trace("Outputting " + myValue + " x " + myLength);
	            		myOutputArray[myRow][myOutputCol]	= getOutputValue(myValue, myLength);
	            	}
	            	
	            	myLastValue	= myValue;
	            }
	           // trace("-----------");
			}
			
			return myOutputArray;
		}
		
		public function RLEDecode(myInputArray:Array):Array
		{
			var i:uint,
				myRow:uint,
				myCol:uint,
				myOutputColumn:uint,
				myValue:uint,
				myLength:uint,
				myCurrentBits:uint,				
				myMapRowCount:uint	= myInputArray.length,
				myMapColCount:uint,
				myOutputArray:Array	= new Array();
			
			for(myRow=0; myRow < myMapRowCount; myRow++){
				myMapColCount	= myInputArray[myRow].length;
				myCurrentBits	= 0;
				myOutputArray[myRow]	= new Array();
				myOutputColumn	= 0;
				
				for(myCol=0; myCol < myMapColCount; myCol++){
					myCurrentBits	= uint(myInputArray[myRow][myCol]);
					myLength		= myCurrentBits >> 8;
					myValue			= myCurrentBits - (myLength << 8);
					 
					for(i = 0; i<myLength; i++){
						myOutputArray[myRow][myOutputColumn]	= myValue;
						myOutputColumn++;
					}					
	            }
	           // trace("-----------");
			}
			
			return myOutputArray;
		}
		
		private function getOutputValue(myValue:uint, myLength:uint):uint
		{
			var myOutput:uint = myLength;
			myOutput <<= 8;
			myOutput += myValue;
			return myOutput; 
		}		
